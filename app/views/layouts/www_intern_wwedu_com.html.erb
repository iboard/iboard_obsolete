     <%- content_for :user_menu do -%><%= render :partial => 'layouts/user_menu' -%><% end %>
     <%- content_for :banner_left do -%>&nbsp;<% end %>
     <%- content_for :banner_right do -%><%= _('Last update:') + " " + _( date.localize(get_language_code) ) -%><% end %>
