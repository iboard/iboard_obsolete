                <a
                    onclick="Element.hide('close_id');Element.show('open_id');new Effect.Fade('flash_popup',{});">
                    <%= _('close') -%>
                </a>        
            </div>
            <div id='flash_popup' style='
            	position: relative;
            	z-index: 10;
            	vertical-align: top;
            	width: 774px;
            	height: 790px;
            	border: 4px solid #9b846b;
            	background: white;
            	padding: 10px;
            	margin: 10px;
                display: none;'>
                <object classid="clsid:D27CDB6E-AE6D-11cf-96B8-444553540000" 
                  codebase="http://download.macromedia.com/pub/shockwave/cabs/flash/swflash.cab#version=6,0,0,0" height="783" width="766">
                				<param name="movie" value="/iboard/flash/curtain.swf">
                				<param name="quality" value="best">
                				<param name="play" value="true">
                				<embed height="783" pluginspage="http://www.macromedia.com/go/getflashplayer" 
                				src="/iboard/flash/curtain.swf" 
                				type="application/x-shockwave-flash" width="766" quality="best" play="true">
                </object>
            </div>
        -->
       </center>
    </div>
    <div class='top2'>
      <div class='navigation'><%= month_links('soundtheatre') -%> || <%= pages_links('soundtheatre') -%></div>
      <center>
      <div class='center_wrapper'>
         <% if request.env["HTTP_USER_AGENT"].include? "MSIE" %>
             <div class=event_title><b>Ihr Browser ist nicht für diese Website geeignet!<br />
                 Die Seite wird daher mit Ihrem Browser nicht richtig angezeigt.</b>
                 <hr>
                 Wir sind bemüht so bald als möglich auch eine Version für den Microsoft Internet Explorer anzubieten.<br/>
                 Einen geeigneten (gratis) Browser finden Sie u.a. <a href=http://www.apple.com/safari/>hier...</a>
                 <br>
             </div>
         <% end %>
         <div class='main'>
             
             <p style="color: green"><%= flash[:notice] %></p>
              <%= yield %>
             <div class='footer'>
                 Stelzhamer-Straße 9 · 4600 Wels · Austria · T. +43 664 607055200 · events@thesoundtheatre.com
                 <br/><img src='/iboard/images/hr_pic.gif' /><br/>
                 Copyright © 2008 TheSoundtheatre. All Rights Reserved. | 
                 <%= link_to( _('AGB | Impressum'), show_page_page_path(5,:layout => 'soundtheatre') ) -%>
             </div>
         </div>
      
      </div>
      <% if granted_for?('events') %>
          <%= link_to( _('Administration'), root_path ) -%> | <%= link_to( _('Logout'), logout_path )%>
      <% end %>
      </center>
    </div>
 
</body>
</html>
